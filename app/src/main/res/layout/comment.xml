<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_face"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/a" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/iv_face"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/iv_face"
            android:text="萌翻了" />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="10dp"
            android:layout_height="10dp"

            android:layout_alignTop="@+id/tv_username"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/tv_username"
            android:background="@drawable/ic_user_female_border" />

        <TextView
            android:id="@+id/tv_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_good"
            android:layout_marginEnd="26dp"
            android:layout_toStartOf="@+id/iv_good"
            android:text="ss" />

        <ImageView
            android:id="@+id/iv_good"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/iv_sex"
            android:layout_marginEnd="43dp"
            android:background="@drawable/ic_feedback_good" />

        <TextView
            android:id="@+id/tv_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_good"
            android:layout_alignStart="@+id/iv_good"
            android:layout_marginStart="18dp"
            android:text="107" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:text="up声线很棒啊" />

</LinearLayout>
