<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zero.bilibili.offlineActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_offline"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#07ebef"></android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/tv_memory"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="sssssss"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="全部开始"
            android:textStyle="bold"
            android:id="@+id/tv_start" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="25dp"
            android:background="#000000"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_start"
            android:id="@+id/view">

        </View>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_start" />
        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ica_light_ic_action_refresh"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
