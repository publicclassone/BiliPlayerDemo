<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/iv_vedio"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@drawable/bili_anim_tv_chan_9" />

        <TextView
            android:id="@+id/tv_vedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_info_views2"

            android:gravity="center"
            android:padding="2dp"
            android:text="6110"
            android:layout_alignBottom="@+id/iv_vedio"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_vedio_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_vedio"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/tv_vedio"
            android:drawableLeft="@drawable/ic_info_danmakus2"
            android:gravity="center"
            android:padding="2dp"
            android:text="167" />

        <TextView
            android:id="@+id/tv_vedio_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/iv_vedio"

            android:text="绯弹的亚里亚AA OP专辑team AA" />
    </RelativeLayout>


</RelativeLayout>
